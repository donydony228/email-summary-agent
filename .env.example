# 環境變數範例檔案
# 複製此檔案為 .env 並填入實際的值
# Claude API
CLAUDE_API_KEY=your_claude_api_key_here

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# LangSmith
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGSMITH_TRACING_V2=true
LANGSMITH_PROJECT=your_project_name_here

# Gmail API - 單一帳號模式
GMAIL_CREDENTIALS_PATH=credentials/credentials.json
GMAIL_TOKEN_PATH=credentials/token.json

# Gmail API - 多帳號模式
# 設定為 true 啟用多帳號模式
GMAIL_MULTI_ACCOUNT=false

# 如果使用多帳號，在 agent/graph.py 中配置帳號列表
# 或者使用 JSON 格式（進階用法）：
# GMAIL_ACCOUNTS='[{"label":"個人","credentials_path":"credentials_account1.json","token_path":"token_account1.json"},{"label":"工作","credentials_path":"credentials_account2.json","token_path":"token_account2.json"}]'

# Slack (可選)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# 應用設定
PORT=8000

# 郵件摘要設定
EMAIL_TIME_RANGE=26h
MAX_EMAILS=100

# 調度器設定
SCHEDULE_TIME=08:00
RUN_ON_STARTUP=false