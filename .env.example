# 環境變數範例檔案
# 複製此檔案為 .env 並填入實際的值
# Claude API
CLAUDE_API_KEY=your_claude_api_key_here

# OpenAI API
OPENAI_API_KEY=

# LangSmith
LANGSMITH_API_KEY=
LANGSMITH_TRACING_V2=true
LANGSMITH_PROJECT=

# Gmail API - 單一帳號模式
GMAIL_CREDENTIALS_PATH=credentials/credentials.json
GMAIL_TOKEN_PATH=credentials/token.json

# === 帳號 1===
GMAIL_CREDENTIALS_ACCOUNT1_BASE64=
GMAIL_TOKEN_ACCOUNT1_BASE64=

# === 帳號 2===
GMAIL_CREDENTIALS_ACCOUNT2_BASE64=
GMAIL_TOKEN_ACCOUNT2_BASE64=

# === 帳號 3===
GMAIL_CREDENTIALS_ACCOUNT3_BASE64=
GMAIL_TOKEN_ACCOUNT3_BASE64=

# Google Calendar
GOOGLE_CALENDAR_TOKEN_BASE64=

# Slack (可選)
SLACK_WEBHOOK_URL=
SLACK_BOT_TOKEN=
SLACK_SIGNING_SECRET=
SLACK_CHANNEL_ID=

# 應用設定
PORT=8000
GMAIL_MULTI_ACCOUNT=true

# 郵件摘要設定
EMAIL_TIME_RANGE=26h
MAX_EMAILS=100

# 調度器設定
SCHEDULE_TIME=08:00
RUN_ON_STARTUP=false